/* pages/myinfo/myinfo.wxss */

myinfo-container{
    width: 100%;
    height: 100vh;
    display: flex;
    position: relative;
}
.header{
    width: 100%;
    display: flex;
    align-items: center;
    justify-content: center;
    height: 200px;
    flex-direction: column;
    border-bottom: 1px solid rgb(223, 223, 223);
}
.userheader{
    width: 90px;
    height: 90px;
    border-radius: 50%;
}
.username{
    width: 100%;
    text-align: center;
    font-weight: bold;
    margin: 10px 0 20px 0;
}
.recore-img{
    width: 30px;
    height: 30px;
}
.icon{
    width: 20px;
    height: 20px;
    position: absolute;
    right: 20px;
}
.record{
    width: 100%;
    height: 60px;
    display: flex;
}
.play_record{
    width: 50%;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    border-right: 1px solid rgb(223, 223, 223);
}
.play_record:active{
    background: rgb(179, 179, 179);
}
.my_upload{
    width: 50%;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
}
.my_upload:active{
    background: rgb(179, 179, 179);
}
.option{
    width: 100%;
    box-sizing: border-box;
    padding: 0 20px;
    display: flex;
    position: relative;
    height: 40px;
    border-bottom: 1px solid rgb(223, 223, 223);
    align-items: center;
}
.option:active{
    background: rgb(179, 179, 179);
}
.mynickname{
    border-top: 1px solid rgb(223, 223, 223);
}
.logoutbtn{
    margin-top: 20px;
    margin-left: 50%;
    transform: translateX(-50%);
}

.userinfo{
    position: absolute;
    right: 30px;
    color: grey;
}

.container{
    width: 100%;
    height: 100vh;
    display: flex;
    align-items: center;
    justify-content: center;
    position: fixed;
    top: 0;
    left: 0;
    z-index: 1000;
}
.background{
    width: 100%;
    height: 100%;
    background: rgba(0,0,0,.5);
    display: flex;
    align-items: center;
    justify-content: center;
    box-sizing: border-box;
    padding: 20px;
}
.item-container{
    width: 90%;
    background: #fff;
    height: auto;
}
.each-item{
    border: 1px solid rgb(137, 158, 255);
    border-radius: 10px;
    width: 90%;
    height: 100px;
}