/* pages/playrecord/playrecord.wxss */

.containerr{
    width: 100%;
    height: 100%;
    display: flex;
    flex-direction: column;
    position: relative;
    padding: 20px 0 0 0;
    align-items: center;
}
text{
    float: left;
}
.record{
    width: 90%;
    height: 80px;
    box-sizing: border-box;
    padding: 10px;
    /* border: 1px solid rgb(204 204 204); */
    border-radius: 15px;
    background: #409EFF;
    color: #fff;
    margin: 7px;
    box-shadow: 0 0 7px rgba(0,0,0,.2);
}
.title{
    height: 50%;
}
.rtitle{
    font-size: 20px;
}
.info{
    height: 50%;
    display: flex;
    font-size: 12px;
    align-items: center;
    justify-content: space-between;
}