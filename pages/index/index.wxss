/**index.wxss**/
.container{
  width: 100%;
  position: relative;
  padding-bottom: 50px;
}

.swiper-container{
  width: 100%;
  height: 150px;
  position: absolute;
  top: 0;
  left: 0;
}
.search{
  width: 90%;
  margin: 10px auto;
  height: 32px;
  position: absolute;
  display: flex;
  align-items: center;
  background: #fff;
  top: 150px;
  border-radius: 30px;
  padding: 0 5px;
  border: 1px solid rgb(202, 202, 202);
}
.search-icon{
  width: 25px;
  height: 25px;
}
#search{
  background: #fff;
}
.allcourse{
  position: absolute;
  width: 100%;
  padding:0 10px;
  top: 202px;
  box-sizing: border-box;
}
.coursetitle{
  width: 100%;
  text-align: center;
  height: 20px;
  line-height: 20px;
}
.courseType{
  width: 80%;
  display: flex;
  border-radius: 50px;
  box-shadow: 0 0 15px rgba(0,0,0,.1);
  height: 40px;
  margin: 10px auto;
  overflow: hidden;
}
.cate{
  width: 25%;
  display: flex;
  align-items: center;
  justify-content: center;
}
.cate-active{
  background: #0e2440;
  color: #fff;
}

.courses{
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

.each-curse{
  width: 98%;
    height: 200px;
    display: flex;
    flex-direction: column;
    border-radius: 15px;
    background: #fff;
    box-shadow: 0 0 15px rgba(0,0,0,.1);
    box-sizing: border-box;
    padding: 5px;
    margin: 10px 0;
}
.video-title{
  width: 100%;
    height: 20%;
    display: flex;
    align-items: center;
    justify-content: left;
}
.video-box{
  width: 100%;
  height: 80%;
}
.video{
  width: 100%;
  height: 100%;
  border-radius: 10px;
}
.searchbtn{
  width: 50px !important;
  padding: 0 5px !important;
  font-size: 13px;
  height: 27px;
  text-align: center;
  line-height: 27px;
  border-radius: 35px;
  /* text-indent: 2px; */
  position: absolute;
  right: 5px;
}