.send-question{
    width: 100%;
    display: flex;
    flex-direction: column;
    align-items: center;
    position: fixed;
    bottom: 25px;
}
.question-input{
    width: 90%;
    border: 1px solid rgb(240,240,240);
    border-radius: 5px;
    box-sizing: border-box;
    padding: 10px;
    height: 40px;
    font-size: 13px;
    margin-bottom: 10px;
}
.question-input:active{
    border: 1px solid rgb(204, 255, 197);
}
.subbtn{
    width: 77px;
    font-size: 14px;
}

.question-detail{
    width: 100%;
    display: flex;
    align-items: center;
    justify-content: center;
    flex-direction: column;
    box-sizing: border-box;
    padding: 0 20px;
}
.question-title{
    width: 100%;
    margin-bottom: 20px;
    display: flex;
    flex-direction: column;
    /* align-items: flex-start; */
    /* justify-content: space-around; */
    font-weight: bold;
    font-size: 21px;
    /* border-bottom: 1px solid rgb(240,240,240); */
    padding: 10px 20px;
}
.by{
    color: #999;
    font-size: 13px;
}
.replays{
    width: 100%;
    display: flex;
    justify-content: center;
    flex-direction: column;
}

.replay{
    width: 100%;
    margin-bottom: 10px;
    background: rgb(240,240,240);
    border-radius: 5px;
    box-sizing: border-box;
    padding: 10px;
}
.intro{
    margin-bottom: 10px;
    color: #999;
}